{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "stm32",
            "displayName": "stm32",
            "hidden": true,
            "description": "Compiler settings for ST MCUs",
            "toolchainFile": "cmake/arm-none-eabi-gcc.cmake"
        },
        {
            "name": "stm32h5",
            "displayName": "stm32h5",
            "description": "Compiler settings for stm32h5",
            "inherits": "stm32",
            "cacheVariables": {
                "CMAKE_C_FLAGS": "-mcpu=cortex-m33 -mthumb -mfpu=fpv5-sp-d16 -mfloat-abi=hard -fdata-sections -ffunction-sections -Wall -Og",
                "CMAKE_CXX_FLAGS": "-mcpu=cortex-m33 -mthumb -mfpu=fpv5-sp-d16 -mfloat-abi=hard -fdata-sections -ffunction-sections -Wall -Og",
                "FREERTOS_PORT": "GCC_ARM_CM33_NTZ_NONSECURE"
            }
        },
        {
            "name": "Demo",
            "displayName": "Demo",
            "description": "Compiler settings for Demo",
            "inherits": "stm32h5",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/app/Demo/Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TARGET": "Demo"
            }
        },
        {
            "name": "can",
            "displayName": "can",
            "description": "Compiler settings for can",
            "inherits": "stm32h5",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/app/can/Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TARGET": "can"
            }
        }
    ]
}